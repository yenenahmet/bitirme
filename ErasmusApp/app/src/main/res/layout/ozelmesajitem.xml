<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        android:id="@+id/img_profil_Özelmesaj"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ahmet YENEN"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:textSize="12dp"
            android:id="@+id/Kullanici_adi_özelmesaj"
            android:textColor="#F50057"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="10dp"
            android:id="@+id/txt_zaman_özelmesaj"
            android:text="Small Text"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"

            android:textColor="#6e5e5e" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:id="@+id/özelmesaj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arkadaş ekledin! Ahmet Yenen arkadaşlık isteğinizi kabul etti."
            android:textColor="#6e5e5e" />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>