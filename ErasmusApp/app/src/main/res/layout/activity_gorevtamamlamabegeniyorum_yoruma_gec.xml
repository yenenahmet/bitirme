<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.ahmet.erasmusapp.GorevtamamlamabegeniyorumYorumaGec">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:id="@+id/linearLayout4">
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewpager_yorum"
            >
        </android.support.v4.view.ViewPager>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignLeft="@+id/linearLayout4"
        android:layout_alignStart="@+id/linearLayout4"
        android:id="@+id/linearLayout5"
        android:background="#89ddd2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:textColor="#F50057"
            android:id="@+id/textView16"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="Beğenenleri Gör"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:textSize="15dp"
            />
    </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewYorum"
            android:layout_below="@+id/linearLayout5"
            android:layout_alignLeft="@+id/linearLayout5"
            android:layout_alignStart="@+id/linearLayout5"
            android:layout_above="@+id/editText7_Yorumgonder"
            android:divider="@null"
            />




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText7_Yorumgonder"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button9"
        android:layout_toLeftOf="@+id/button9"
        android:layout_marginRight="20dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/send36"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/editText7_Yorumgonder"
        android:layout_alignRight="@+id/linearLayout5"
        android:layout_alignEnd="@+id/linearLayout5" />




</RelativeLayout>
